@model IEnumerable<Inventory.Web.Models.Container>

@{
    ViewData["Title"] = "Index";
}

    <h2 class="title">
        Containers
        <a class="button is-pulled-right is-link" asp-action="Create">Create New</a>
    </h2>

<p>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Room
            </th>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Room.Name
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">
                    @item.Name
                </a>
            </td>
            <td>
                @Html.Raw(@item.Description)
            </td>
            <td>
                <form class="delete-form" asp-action="Delete" asp-route-id="@item.Id">
                    <div class="buttons has-addons are-small">
                        <a class="button is-outlined is-link" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <input type="submit" value="Delete" class="button is-outlined is-danger delete-link" />
                    </div>
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
